<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_repeat"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <RelativeLayout
            android:id="@+id/photo_panel"
            android:layout_width="fill_parent"
            android:layout_height="72dip"
            android:background="@drawable/panel_with_arrow"
            android:focusable="true"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/image_preview_size" 
                android:layout_height="@dimen/image_preview_size"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_no_photo"
                />
            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_numder"
                android:layout_marginRight="12dip"
                android:paddingLeft="12dip"
                android:paddingTop="2dip"
                android:paddingRight="12dip"
                android:paddingBottom="2dip"
                android:textColor="#000"
                android:text="1"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/address_panel"
            android:layout_width="fill_parent"
            android:layout_height="72dip"
            android:background="@drawable/panel_with_arrow"
            android:focusable="true"
            >
            <TextView
                android:id="@+id/address"
                style="?android:attr/spinnerItemStyle"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/address_hint"
                />
        </RelativeLayout>
        <ru.redsolution.rosyama.NoDefaultSpinner
            android:layout_width="fill_parent"
            android:layout_height="72dip"
            android:id="@+id/type"
            android:background="@drawable/panel_with_arrow"
            android:prompt="@string/type_prompt"
            />
        <RelativeLayout
            android:id="@+id/comment_panel"
            android:layout_width="fill_parent"
            android:layout_height="72dip"
            android:background="@drawable/panel_with_arrow"
            android:focusable="true"
            >
            <TextView
                android:id="@+id/comment"
                style="?android:attr/spinnerItemStyle"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/comment_hint"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/send"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:text="@string/hole_send"
        />
        <Button
            android:id="@+id/delete"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_margin="4dip"
            android:text="@string/hole_delete"
        />
    </LinearLayout>
</ScrollView>