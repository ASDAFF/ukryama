<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_repeat"
    >
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <RelativeLayout
            android:id="@+id/photo_panel"
            android:layout_width="fill_parent"
            android:layout_height="72dip"
            android:background="@drawable/panel_with_arrow"
            android:focusable="true"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/image_preview_size" 
                android:layout_height="@dimen/image_preview_size"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_no_photo"
                />
            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_numder"
                android:layout_marginRight="12dip"
                android:paddingLeft="12dip"
                android:paddingTop="2dip"
                android:paddingRight="12dip"
                android:paddingBottom="2dip"
                android:textColor="#000"
                android:text="1"
                />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="11dip"
            android:paddingTop="5dip"
            android:paddingRight="24dip"
            android:paddingBottom="6dip"
            android:background="#EEE"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                >
                <TextView
                    android:id="@+id/date"
                    android:layout_width="fill_parent" 
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="24dip"
                    android:singleLine="true"
                    android:text="Вчера"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                >
                <ImageView
                    android:layout_width="16dip" 
                    android:layout_height="16dip"
                    android:src="@drawable/ic_location"
                    />
                <TextView
                    android:id="@+id/address"
                    android:layout_width="fill_parent" 
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dip"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:text="@string/address_prompt"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                >
                <ImageView
                    android:id="@+id/type_image"
                    android:layout_width="16dip" 
                    android:layout_height="16dip"
                    android:src="@drawable/ic_type"
                    />
                <TextView
                    android:id="@+id/type_text"
                    android:layout_width="fill_parent" 
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dip"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:text="@string/type_prompt"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                >
                <TextView
                    android:id="@+id/comment"
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dip"
                    android:textColor="#000"
                    android:text="@string/comment_prompt"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/pdf"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:text="@string/pdf_preview"
        />
    </LinearLayout>
</ScrollView>